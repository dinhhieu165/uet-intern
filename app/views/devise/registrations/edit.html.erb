<div class="col-sm-10 col-sm-offset-1">
<h1 class="text-center text-primary">doi mat khau</h1>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
   
    <div class="form-group row">
      <%= f.label :email,class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.email_field :email,class: "form-control",placeholder: "email" %>   
      </div>
    </div>


    <div class="form-group row">
        <%= f.label :current_password,class:"col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.password_field :current_password, class: "form-control", placeholder: "current password" %>   
        </div>
      </div>

    <div class="form-group row">
        <%= f.label :password,class:"col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.password_field :password, class: "form-control", placeholder: "new passworld" %>   
        </div>
      </div>

       <div class="form-group row">
        <%= f.label :password_confirmation,class:"col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "password confirmation" %>   
        </div>
      </div>

       
   
    <div class="form-group row">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "update" ,class: "btn btn-success" %>
      </div>
    </div>
  <% end%>
  </div>
