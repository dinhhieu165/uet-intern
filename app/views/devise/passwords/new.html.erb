


<div class="container">
	<div id="passwordreset" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <div class="panel-title">Password Reset</div>
                            <div style="float:right; font-size: 85%; position: relative; top:-10px"><%= link_to "Log in", new_session_path(resource_name) %></div>
                        </div>  
                        <div class="panel-body" >
                            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post },class:"form-horizontal") do |f| %>
                                <div class="form-group">
                                    <label for="email" class="col-md-3 control-label">Registered Email</label>
                                    <div class="col-md-9">
                                        
                                        <%= f.email_field :email,class: "form-control", autofocus: true, autocomplete: "email",placeholder:"Enter your email address that you used to register" %>
                                    </div>
                                </div>
                                    
                                <div class="form-group">
                                    <!-- Button -->                                        
                                    <div class="col-md-offset-3 col-md-9">
                                        <%= f.submit "Send",class:"btn btn-warning" %>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <div class="col-md-12 control">
                                        <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                            We'll send you an email with a link to reset your password.
                                        </div>
                                    </div>
                                </div>    
                                
                            <% end %>
                         </div>
                    </div>
         </div> 
    </div>