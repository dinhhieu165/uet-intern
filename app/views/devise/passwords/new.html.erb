


<div class="col-sm-10 col-sm-offset-1">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post },class:"form-horizontal") do |f| %>
    <div class="form-group">
        <div class="col-md-12 control">
            <div style="border-bottom: 1px solid#888; margin:15px 0; font-size:85%" >
                We'll send you an email with a link to reset your password.
            </div>
        </div>
    </div>    
    <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Registered Email</label>
        <div class="col-sm-10">
            
            <%= f.email_field :email,class: "form-control", autofocus: true, autocomplete: "email",placeholder:"Enter your email address that you used to register" %>
        </div>
    </div>
        
    <div class="form-group">
        <!-- Button -->                                        
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Send",class:"btn btn-warning" %>
        </div>
    </div>
    
    
<% end %>
</div>
 