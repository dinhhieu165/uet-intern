<!DOCTYPE html>
<html>

    <head>
        <title> UET INTERNSHIP -
            <%= content_for?(:title) ? yield(:title) : request.env['PATH_INFO'] %>
        </title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>



    <body>
        
        
        
        <!--header start -->
        <header id="header">
            <nav class="navbar navbar-expand-lg navbar-dark  bg-dark fixed-top" >
                <a class="navbar-brand" href="/">UET INTERNSHIP</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-5">
                        
                      
                        <li class="nav-item">
                            <a class="nav-link" href="/thuctap">Thuc Tap</a>
                        </li>
                      
                        
                       
                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </form>
                    <%=render "/layouts/navbar_right" %>
                </div>
                
            </nav>
        </header>
        <!-- header end -->
        <div class="row" style="margin-top:45px">
        </div>
        <% if current_user && !current_user.updated %>
        
            <a href="https://getbootstrap.com" class="d-block px-3 py-2 text-center text-bold text-white bg-primary old-bv">
                ban chua thay doi mat khau
            </a>
        <% end %>
        

        <div class="container mt-3" id="page-body">
            <div class="row">
                <div class="col-sm-9">
                    <%= yield %>
                </div>
                <div class="col-sm-3" id="page-sidebar">
                    <h1>side bar</h1>
                </div>
            </div>
            
            
        </div>
        

        <!-- footer start -->
        <footer id="footer">

        </footer>
        <!-- footer end -->

    </body>

</html>
